                @Html.ValidationMessageFor(model => model.estu_apellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estu_curso, htmlAttributes: new { @class = "control-label col-md-2" })
